<% include ../partials/header %> 


<div class="card text-center">
  <div class="card-header">
    <div class="card-body">
    <h4 class="card-title"> Edit Biografy Form </h4>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    
    </div>
  </div>

<div class="container" style="width:30%;">
    <form action="/biografies/<%= biographFoundEdit._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name1">Name</label>
        <input type="text" class="form-control" name="bio[name]" id="name1" aria-describedby="emailHelp" value="<%= biographFoundEdit.name %>">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="picture1">Picture</label>
        <input type="text" class="form-control" name="bio[picture]" id="picture1" value="<%= biographFoundEdit.picture %>">
      </div>
      <div class="form-group">
        <label for="year1">Year of bird</label>
        <input type="number" class="form-control" name="bio[year]" id="year1" value="<%= biographFoundEdit.year %>">
      </div>
      <div class="form-group">
        <label for="country1">Country</label>
        <input type="text" class="form-control" name="bio[country]" id="country1" value="<%= biographFoundEdit.country %>">
      </div>
      <div class="form-group">
        <label for="description1">Description</label>
        <textarea rows="3" type="text" class="form-control" name="bio[description]" id="description1" ><%= biographFoundEdit.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ../partials/footer %> 